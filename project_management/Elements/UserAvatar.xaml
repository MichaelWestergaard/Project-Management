<UserControl x:Class="project_management.Elements.UserAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:project_management.Elements"
             mc:Ignorable="d">
    <Button Uid="1" Name="AssignMemberToTask" Click="AssignMemberToTask_Click" Background="White">
        <Ellipse Width="30" Height="30">
            <Ellipse.Fill>
                <ImageBrush x:Name="UserImage"/>
            </Ellipse.Fill>
        </Ellipse>
    </Button>
</UserControl>
